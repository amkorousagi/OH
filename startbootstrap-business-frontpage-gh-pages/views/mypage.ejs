<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>내정보</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <style>
        #register {
            color: white;
            font-weight: 400;
        }
    </style>
    <script src="jquery-3.6.0.min.js"></script>
    <script src="js/logout.js"></script>
    <script>
        function onrequest() {
            const id = document.getElementById('login_user_id').value;
            const password = document.getElementById('login_password').value;
            const nickname = document.getElementById('nickname').value;
            const stateMessage = document.getElementById('stateMessage').value;
            const data = {
                UserId: id,
                UserPassword: password
            };
            const data2 = {
                Nickname: nickname,
                StateMessage: stateMessage
            };
            //console.log(JSON.stringify(data));
            $.ajax({
                type: "POST",
                accepts: "application/json",
                contentType: "application/json; charset=utf-8",
                url: '<%= backURL%>/user_no_auth/login',
                data: JSON.stringify(data),
                dataType: "json",
                success: function (ret) {
                    $.ajax({
                        type: "PATCH",
                        accepts: "application/json",
                        contentType: "application/json; charset=utf-8",
                        url: '<%= backURL%>/user',
                        data: JSON.stringify(data2),
                        dataType: "json",
                        success: function (data) {
                            alert('수정되었습니다.');
                            window.open('/mypage', '_self');
                        },
                        error: function (a, b, c) {
                            console.log(c);
                            console.log(data2);
                        },
                        beforeSend: function (xhr) {
                            /* Authorization header */
                            xhr.setRequestHeader("Authorization", "bearer " + localStorage.getItem("token"));
                        }
                    })
                },
                error: function (a, b, c) {
                    alert('비밀번호를 확인해 주세요.');
                    console.log(c);
                }
            });
        }
    </script>
</head>

<body>
    <!-- Responsive navbar-->
    <%- include('layouts/navbar'); -%>
        <!-- Mypage section-->
        <section class="bg-light py-5 border-bottom">
            <div class="container px-5 my-5">
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-4 col-xl-4">
                        <div class="card mb-5 mb-xl-0">
                            <div class="card-body p-5">
                                <div class="text-center mb-5">
                                    <h2 class="fw-bolder mb-5">내정보</h2>
                                </div>
                                <div class="row gx-5 justify-content-center mb-5">
                                    <div class="col-lg-0">
                                        <form>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="login_user_id" type="text"
                                                    autofocus="autofocus" placeholder="아이디" value="<%= user.UserId %>"
                                                    disabled>
                                                <label for="login_user_id">아이디</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="login_password" type="password"
                                                    placeholder="비밀번호" value="">
                                                <label for="login_password">비밀번호 확인</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="nickname" type="text" placeholder="닉네임"
                                                    value="<%= user.Nickname %>">
                                                <label for="nickname">닉네임</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="date" type="text" placeholder="등록일"
                                                    value="<%= user.Date.substring(0, 10) %>" disabled>
                                                <label for="date">등록일</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="stateMessage" type="text"
                                                    placeholder="상태메세지" value="<%= user.StateMessage %>">
                                                <label for="stateMessage">상태메세지</label>
                                            </div>
                                            <input type="hidden" id="password_check" value="<%= user.UserPassword %>">
                                            <div class="d-grid"><button type="button" class="btn btn-primary btn-lg" onclick="onrequest()">수정</button></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-xl-4">
                        <div class="card mb-5 mb-xl-0">
                            <div class="card-body p-5">
                                <div class="text-center mb-5">
                                    <h2 class="fw-bolder mb-5">맞은 문제</h2>
                                </div>
                                <div>
                                    <% if(user.SolvedProblem.length==0) %>
                                    아직 맞은 문제가 없습니다.
                                    <% for (var i=0; i < user.SolvedProblem.length; i++) { %>
                                    <%= user.SolvedProblem[i] %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-xl-4">
                        <div class="card mb-5 mb-xl-0">
                            <div class="card-body p-5">
                                <div class="text-center mb-5">
                                    <h2 class="fw-bolder mb-5">틀린 문제</h2>
                                </div>
                                <div>
                                    <% if(user.SolvedProblem.length==0) %>
                                    아직 틀린 문제가 없습니다.
                                    <% for (var i=0; i < user.SolvedProblem.length; i++) { %>
                                    <%= user.SolvedProblem[i] %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
            <!-- Bootstrap core JS-->
            <%- include('layouts/scripts'); -%>
</body>

</html>