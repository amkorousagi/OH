<!DOCTYPE html>
<html lang="kor">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>COMMUNITY DETAIL</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="http://localhost:4000/css/styles.css" rel="stylesheet" />
    <link href="http://localhost:4000/css/comdet.css" rel="stylesheet" />
    <script src="http://localhost:4000/jquery-3.6.0.min.js"></script>
    <script>
        function request() {
            let url_string = window.location.href
            let arr = url_string.split("/")
            const RefPost = arr[arr.length - 1]
            const Title = document.getElementById("input_title").value;
            const Body = document.getElementById("input_body").value;
            const obj = { RefPost,Title,Body};
            console.log(obj);
            $.ajax({
                type: 'POST',
                url: "http://localhost:3001/comment",
                accepts: "application/json",
                data: JSON.stringify(obj),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data) {
                        console.log(data)
                        alert("작성됨!")
                    }
                    else {
                        alert("작성오류");
                    }
                },
                error: function (a, b, c) {
                    console.log(a);
                    console.log(b);
                    console.log(c);
                },
                beforeSend: function (xhr) {
                    /* Authorization header */
                    xhr.setRequestHeader("Authorization", "bearer " + localStorage.getItem("token"));

                }
            });
        }
    </script>
</head>

<body>
    <!-- Responsive navbar-->
    <%- include('layouts/navbar'); -%>
        </br>
        <h2>&nbsp; 게시판 </h2>
        <hr>
        <!--table-->
        <table class="detail_table" col="4" row="5">
            <tr>
                <td id="title" width="50">
                    <h4>제목</h4>
                </td>
                <td id="content" width="200">
                    <a>
                        <%= data.Title %>
                    </a>
                </td>
            </tr>
            <tr>
                <td colspan="2" rowspan="5">
                    <%= data.Body %>
                </td>
            </tr>
        </table>
        </br></br>
        <form>
            <table class="reply_table" col="4" row="2">
                <tr>
                    <td colspan="12" class="reply">
                        <input type="text" id="input_title" value=""/>
                        <textarea class="reply_input" id="input_body" value="" placeholder="댓글을 입력해주세요."></textarea>
                    </td>
                    <td>
                        <button type="button" id="button" class="submit_reply" onclick="request()">입력</button>
                    </td>
                </tr>
                <% for (var i=0; i < comments.length; i++) { %>
                <tr>
                    <td colspan="3" class="reply_cont"><%= comments[i].Title %></td>
                    <td colspan="3" class="reply_cont"><%= comments[i].Body %></td>
                    <td colspan="3" class="reply_cont"><%= comments[i].Nickname %></td>
                    <td colspan="3" class="reply_cont"><%= comments[i].Date %></td>
                </tr>
                <% } %>
            </table>
        </form>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container px-5">
                <p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="http://localhost:4000/js/scripts.js"></script>
</body>

</html>