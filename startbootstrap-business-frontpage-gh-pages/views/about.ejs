            .bounce-red {animation: red_ 1s linear infinite alternate;}
            #N {animation-delay: 0.1s;}
            #U {animation-delay: 0.2s;}
            @keyframes red_ {
                from {color: white;}
                to { color: red;}
            }
            .btn-down {
                width: 300px;
                height: 80px;
                position: relative;
                top: 50px;
                margin-left: auto;
                margin-right: auto;
            }
            .btn-down a {
                width: 100%;
                height: 100%;
                text-decoration: none;
                font-size: 30px;
                font-weight: bold;
                color: white;
                position: relative;
                background-color: darkgoldenrod;
                padding: 10px 20px 10px 20px;
                border-radius: 10px 10px 10px 10px;
            }
            .btn-down a:hover {
                background-color: white;
                color: darkgoldenrod;
            }
            #section2 {
                background-color: darkgoldenrod;
            }
            .sec2_title {
                width: 1400px;
                margin-right: auto;
                margin-left: auto;
                font-size: 50px;
                color: white;
                text-align: center;
                font-weight: bold;
                position: relative;
                top: 60px;
                color: white;
            }
            .members {
                width: 1400px;
                margin-left: auto;
                margin-right: auto;
                position: relative;
                top: 200px;
                /* background-color: red; */
            }      
            .member {
                width: 300px;
                height: 400px;
                background-color: #212529;
                position: relative;
                border-radius: 50px;
                /* opacity: 0.9; */
                display: inline-block;
                /* transition: top; */
                /* transition-duration: 2s; */
            }
            .member:hover {
                animation: show-mem 0.5s ease-out 1 alternate;
                top: -20px;
                background-image: url("../public/assets/images/apple.jpg");
            }
            @keyframes show-mem {
                from { top: 0px}
                to {top: -20px}
            }
            #mem2 {
                left: 60px;
            }
            #mem3 {
                left: 120px;
            }
            #mem4 {
                float: right;
            }
            .mem_text {
                font-size: 25px;
                font-weight: bold;
                text-align: center;
                color: white;
                text-decoration: none;
                position: relative;
                top: 180px;
            }
            * {margin:0;padding:0;box-sizing:border-box;}
            ul, li {list-style:none;}

            [name="slide"] {display:none;}
